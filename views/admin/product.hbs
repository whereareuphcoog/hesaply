<div style="color: white" class="row">
    <div class="col-sm-6">
<img src="/img/banner/{{pro.banner}}" class="img img-thumbnail bg-dark">

    </div>
    <div class="col-sm-6">
        <form enctype="application/x-www-form-urlencoded" method="post" action="/admin/product/{{pro._id}}/texts">
            <div class="form-group">
                <label for="name">İsim:</label>
                <input type="text" required name="name" value="{{pro.name}}" id="name" class="form-control">
            </div>
                        <div class="form-group">
                <label for="details">Detaylar:</label>
                <textarea name="details" id="details" rows="6" class="form-control">{{pro.details}}</textarea>
            </div>
                        <div class="form-group">
                <label for="price">Fiyat:</label>
                <input type="number" required name="price" value="{{pro.price}}" id="price" class="form-control">
            </div>
            <button class="btn btn-warning">Bilgileri Güncelle</button>
        </form>
        <br>
        <form enctype="multipart/form-data" method="post" action="/admin/product/{{pro._id}}/banner">
        
            <div class="custom-file">
                <label for="banner" class="custom-file-label">Poster</label>
                <input type="file" required name="banner" id="banner" class="custom-file-input">
            </div>
            <p></p>
            <button class="btn btn-warning">Poster Yükle</button>

        </form>
    </div>
</div>







